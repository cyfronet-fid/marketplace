#!/usr/bin/env ruby
APP_ROOT = File.expand_path("..", __dir__)

require_relative "../config/boot"
require_relative "../config/environment"

stomp_config = Mp::Application.config_for(:stomp)

Jms::Subscriber.new(stomp_config["destination"],
                    stomp_config["login"],
                    stomp_config["password"],
                    stomp_config["host"],
                    stomp_config["client-name"],
                    ENV["MP_IMPORT_EIC_URL"] || "https://beta.providers.eosc-portal.eu/api",
                    stomp_config["ssl-enabled"]).run
