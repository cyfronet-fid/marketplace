.landing-header
  %section.text-center.heading
    .container
      .row.py-lg-3
        .col-md-7.col-sm-12.mx-auto
          %h1 Browse Marketplace
          .searchbar{ "data-controller": "external" }
            .searchbar__input
              %label.sr-only{ for: "search" }= _("Search")
              = text_field_tag :q, params[:q], class: "autocomplete-input",
                placeholder: "Find resource...",
                "data-e2e": "searchbar-input",
                "data-external-target": "query",
                "data-base": external_search_base_url,
                "data-action": "keydown.esc->external#clear keydown.enter->external#search input->external#toggleClear",
                "data-probe": ""
              %a.d-none.search-clear{ "data-external-target": "clear",
                                      "data-action": "click->external#clear",
                                      title: _("Clear search"),
                                      "data-e2e": "search-clear-btn" }
                .fas.fa-times
            .input-group-append
              %button#query-submit.input-group-text.bg-white{ "data-external-target": "search",
              "data-action": "click->external#search", "data-e2e": "query-submit-btn" }
                %i.fas.fa-search
          .browse.d-flex
            .browse-label
              Popular keywords:
            .popular-box
              %a{ href: "#" } nanotechnology
              %a{ href: "#" } cloud computing
              %a{ href: "#" } storage
%section.research-activity
  .container
    .activity-wrapper

      %a.activity{ href: "#{external_search_base_url}/search/all?q=*&fq=unified_categories:
        (%22Discover%20Research%20Outputs%22)" }
        .activity-icon
          = image_tag "landing_page/ico-01.svg", alt: "Discover Research Outputs"
        .activity-texts
          .activity-title Discover Research Outputs
          .activity-subtitle
            Find datasets, scientific publications, software.

      %a.activity{ href: "#{external_search_base_url}/search/all?q=*&fq=unified_categories:
        (%22Manage%20Research%20Data%22)" }
        .activity-icon
          = image_tag "landing_page/ico-09.svg", alt: "Data Management"
        .activity-texts
          .activity-title Data Management
          .activity-subtitle
            Find robust, feature-rich and user-friendly services for Data Management.

      %a.activity{ href: "#{external_search_base_url}/search/all?q=*&fq=unified_categories:
        (%22Access%20Research%20Infrastructures%22)" }
        .activity-icon
          = image_tag "landing_page/ico-07.svg", alt: "Access research infrastructures"
        .activity-texts
          .activity-title Access research infrastructures
          .activity-subtitle
            Find frameworks made by scientific clusters or RIs that will equip you with...

      %a.activity{ href: "#{external_search_base_url}/search/all?q=*&fq=unified_categories:
        (%22Find%20Instruments%20%5C%26%20Equipment%22)" }
        .activity-icon
          = image_tag "landing_page/ico-05.svg", alt: "Find Instruments & Equipment"
        .activity-texts
          .activity-title Find Instruments & Equipment
          .activity-subtitle
            Find research instruments and scientific equipment.

      %a.activity{ href: "#{external_search_base_url}/search/all?q=*&fq=unified_categories:
        (%22Publish%20Research%20Outputs%22)" }
        .activity-icon
          = image_tag "landing_page/ico-02.svg", alt: "Publish research outputs"
        .activity-texts
          .activity-title Publish research outputs
          .activity-subtitle
            Store, backup, archive your data, publications, software.

    .activity-wrapper
      .text-wrapper
        Browse
        %span all resources
        in one place:
      .text-wrapper
        %a.btn{ href: "#" } Browse All Resources

