.landing-header
  %section.text-center.heading
    .container
      .row.py-lg-3
        .col-md-8.col-sm-12.mx-auto
          .logo-beyond
            = image_tag "logo-beyond-white.png", alt: "EOSC BEYOND"
          %h1 Explore EOSC <br>Discovery Hub
          %p
            Browse through over 3 millions of research and innovation tools and services, thousands of datasets
            from a wide scale of research domains from renowned European service providers.
          .searchbar{ "data-controller": "external" }
            .searchbar__input
              %label.sr-only{ for: "search" }= _("Search")
              = text_field_tag :q, params[:q], class: "autocomplete-input",
                placeholder: "Find resource...",
                "data-e2e": "searchbar-input",
                "data-external-target": "query",
                "data-base": external_search_base_url,
                "data-action": "keydown.esc->external#clear keydown.enter->external#search input->external#toggleClear",
                "data-probe": ""
              %a.d-none.search-clear{ "data-external-target": "clear",
                                      "data-action": "click->external#clear",
                                      title: _("Clear search"),
                                      "data-e2e": "search-clear-btn" }
                .fas.fa-times
            .input-group-append
              %button#query-submit.input-group-text.bg-white{ "data-external-target": "search",
              "data-action": "click->external#search", "data-e2e": "query-submit-btn" }
                %i.fas.fa-search
          .browse
            .browse-label
              Discover by
            .solutions-box
              = render partial: "pages/solutions_box_link", collection: LandingPageHelper::SEARCH_ITEMS, as: :item
