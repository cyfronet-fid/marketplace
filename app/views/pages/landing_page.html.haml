%section.questions
  .container
    .row
      .col-md-5.col-sm-12
        %h3 Have any questions?<br>Contact Us
        .links
          %a{ href: "#" } Knowledge Hub
          %a{ href: "#" } Frequently Asked Questions
          %a{ href: "#" } Lorem ipsum dolor amet
      .col-md-2.col-sm-12
      .col-md-5.col-sm-12
        %form
          .form-group
            %label{ for: "inputname" } Name
            %input.form-control{ type: "text", id: "inputname", placeholder: "Your First Name" }
          .form-group
            %label{ for: "inputemail" } Email
            %input.form-control{ type: "email", id: "inputemail", placeholder: "Your Email Address" }
          .form-group
            %label{ for: "inputsubject" } Subject
            %input.form-control{ type: "text", id: "inputsubject", placeholder: "Message subject" }
          .form-group
            %label{ for: "inputmessage" } Message
            %textarea.form-control.textarea{ id: "inputmessage", placeholder: "Message" }
          %button.btn.btn-primary{ type: "submit" }Send Message

