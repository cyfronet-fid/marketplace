%h2.home-title Research communities

#home-carousel.communities-carousel.carousel.slide.home-carousel{ "data-ride" => "carousel" }
  - slices = communities.each_slice(1)
  .carousel-inner
    - slices.with_index do |(*slice), i|
      .carousel-item{ class: i&.zero? ? "active" : nil }
        .card-deck
          - slice.each do |community|
            = render "community_card", item: community

    %ol.carousel-indicators.d-none
      - slices.with_index do |(*_), i|
        %li{ "data-target" => "#home-carousel", "data-slide-to" => i,
               class: i&.zero? ? "active" : nil }
