#tab-anchor.home-tabs.container{ "data-controller" => "home-page" }
  %ul.tabs
    %li.tab-link.current{ data: { "target" => "home-page.changeTab",
                  "action" => "click->home-page#changeTab", "tab" => "tab-1" },
                  href: "#" } Scientific Domains
    %li.tab-link{ data: { "target" => "home-page.changeTab",
                  "action" => "click->home-page#changeTab", "tab" => "tab-2" },
                  href: "#" } Categories

  #tab-1.tab-content-home.current{ "data-target" => "home-page.tab" }
    .container
      .row
        = render "home/products/cards",
          cards: scientific_domains,
          url: -> (sd) { services_path(scientific_domains: sd.to_param) },
          default_logo: "ico_ra_default.png"

  #tab-2.tab-content-home{ "data-target" => "home-page.tab" }
    .container
      .row
        = render "home/products/cards",
          cards: categories,
          url: -> (category) { category },
          default_logo: "ico_default.png"

.row.d-flex.justify-content-center.mt-4
  = link_to "Browse all services", services_path, class: "button button--primary"
