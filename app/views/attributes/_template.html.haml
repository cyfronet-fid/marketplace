.card.parameter-form.mb-2
  .card-body
    .card-title
      = t(".#{attribute.type.underscore}.title")
      .float-right
        %a{ "data-action": "offer#up" }
          %i.fas.fa-angle-up
        %a.mr-3{ "data-action": "offer#down" }
          %i.fas.fa-angle-down
        %a{ "data-action": "offer#removeAttribute" }
          %i.fas.fa-times
    .card-text
      = form.simple_fields_for :attributes, attribute, index: attribute.id do |f|
        = f.input :label
        = f.input :description, as: :text
        = render "attributes/template/#{attribute.type.underscore}", f: f
