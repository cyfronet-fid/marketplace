.container
  %h1 Features
  .row.mt-4
    .col-12
      %h3
        = _("Welcome modal for all users:")
    .col-sm-12.btn-group.flex-wrap.mt-2
      = button_to _("Enable welcome modal"), admin_features_enable_modal_path,
      class: "btn btn-primary pl-4 pr-4 mr-5  mb-3"
      = button_to _("Disable welcome modal"), admin_features_disable_modal_path,
      class: "btn btn-warning pl-4 pr-4 mr-5 mb-3"
  .row.mt-4
    .col-12
      - if @suggestions.present?
        %h3
          #{_("Capabilities of goals suggestions")}:
        %ul.simple-list
          - @suggestions.each do |s|
            %li= s
