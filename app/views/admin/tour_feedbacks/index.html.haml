- content_for :title, _("Tour Feedback")
- breadcrumb :admin_tour_feedbacks

.container
  %h1
    = _("Tour Feedback")
  %table.table.table-hover
    %thead
      %tr
        %th
          = _("Tour Name")
        %th.rating-column
          = _("Rating")
        %th
          = _("Comment")
        %th
          = _("Contact Consent/Email")
        %th
          = _("Received")
    %tbody
      - @tour_feedbacks.each do |feedback|
        %tr
          %td
            = feedback.tour_name
          %td
            = render "admin/tour_feedbacks/rating", value: feedback.content["rating"]
          %td
            = feedback.content["comment"]
          %td
            = feedback.email.present? ? feedback.email : false
          %td
            = feedback.created_at

