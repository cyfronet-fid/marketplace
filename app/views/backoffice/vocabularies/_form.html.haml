= simple_form_for [:backoffice, vocabulary], url: url do |f|
  = f.input :name
  = f.input :description
  = f.input :parent_id,
    collection: ancestry_id_tree(vocabulary.potential_parents.sort_by(&:name)),
    label_method: :first, value_method: :last, as: :select, include_blank: true
  = f.input :eid

  %hr.bottom-hr.mt-5.mb-4
  .row.mt-5
    .col-12
      = f.button :submit, button_name, class: "btn btn-primary pl-5 pr-5 mr-5 mobile-bottom-margin",
      "data-e2e": "create-vocabulary-btn"
      %a{ href: "/backoffice/vocabularies/#{snake_cased(type).pluralize}",
      class: "text-left flex-grow-1 text-uppercase mobile-bottom-margin" }
        = _("Cancel and back to previous page")
