%div{ "data-target": "provider.dataAdministrator" }
  .contact
    = data_administrator_form.hidden_field :id
    = data_administrator_form.input :first_name
    = data_administrator_form.input :last_name
    = data_administrator_form.input :email
    = data_administrator_form.hidden_field :_destroy, "data-target": "provider.destroy"
    .text-right
      = link_to _("Delete administrator"), "#", id: "data-administrator-delete-#{data_administrator_form.index}",
      class: "btn-sm disablable btn-danger", "data-action": "click->provider#removeAdmin"
