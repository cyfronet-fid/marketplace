%div{ "data-target": "form.publicContact" }
  .contact
    = public_contact_form.hidden_field :id, disabled: provider.upstream_id.present?
    = public_contact_form.input :first_name, disabled: provider.upstream_id.present?
    = public_contact_form.input :last_name, disabled: provider.upstream_id.present?
    = public_contact_form.input :email, disabled: provider.upstream_id.present?
    = public_contact_form.input :phone, disabled: provider.upstream_id.present?
    - unless provider_form
      = public_contact_form.input :organisation, disabled: provider.upstream_id.present?
    = public_contact_form.input :position, disabled: provider.upstream_id.present?
    = public_contact_form.hidden_field :_destroy, "data-target": "form.destroy"
    .text-right
      = link_to _("Delete contact"), "#", id: "public-contact-delete-#{public_contact_form.index}",
      class: "btn-sm disablable btn-danger", "data-action": "click->form#removeContact"
