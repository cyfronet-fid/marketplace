= simple_form_for [:backoffice, scientific_domain] do |f|
  = f.input :logo
  = f.input :name
  = f.input :description
  = f.input :parent_id,
    collection: ancestry_id_tree(scientific_domain.potential_parents),
    label_method: :first, value_method: :last, as: :select, include_blank: true
  = f.input :eid

  %hr.bottom-hr.mt-5.mb-4
  .row.mt-5
    .col-12
      .button-wrapper.mr-5
        = f.button :submit, class: "btn btn-primary", "data-e2e": "create-scientific-domain-btn"
      %a.text-left.flex-grow-1.text-uppercase.float-left.mt-2{ "href": "/backoffice/scientific_domains/" }
        = _("Cancel and back to previous page")
