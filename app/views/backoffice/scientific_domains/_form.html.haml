= simple_form_for [:backoffice, scientific_domain] do |f|
  = f.input :logo
  = f.input :name
  = f.input :description
  = f.input :parent_id,
    collection: ancestry_id_tree(scientific_domain.potential_parents),
    label_method: :first, value_method: :last, as: :select, include_blank: true
  = f.input :eid


  .btn-group
    = f.button :submit, class: "btn btn-success"
    = back_link_to t("cancel"), scientific_domain, prefix: :backoffice, class: "btn btn-secondary"
