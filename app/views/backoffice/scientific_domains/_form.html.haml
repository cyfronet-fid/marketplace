= simple_form_for [:backoffice, scientific_domain] do |f|
  = f.input :logo
  = f.input :name
  = f.input :description
  = f.input :parent_id,
    collection: ancestry_id_tree(scientific_domain.potential_parents),
    label_method: :first, value_method: :last, as: :select, include_blank: true
  = f.input :eid

  %hr.bottom-hr.mt-5.mb-4
  .row.mt-5
    .col-12
      = f.button :submit, class: "btn btn-primary pl-5 pr-5 mr-5"
      = back_link_to "Cancel and back to previous page", scientific_domain, prefix: :backoffice,
        class: "text-left flex-grow-1 text-uppercase"
