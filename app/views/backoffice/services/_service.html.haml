.media.border-bottom.pb-4.mb-4
  .media-body
    %h2.font-weight-bolder
      = service_status(service)
      = link_to [:backoffice, service] do
        = service.title
    %p.mb-3= service.tagline
    = render "services/categorization", service: service
  - if service.logo.attached?
    = image_tag service.logo.variant(resize: "120x80"), class: "align-self-center mx-2"
