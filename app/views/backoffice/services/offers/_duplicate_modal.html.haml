.exit-popup.d-none{ role: "document", "data-duplicate-target": "modal" }
  .modal-overlay
    .modal-content
      = simple_form_for :custom_form, url: "#", html: { data: {"duplicate-target": "form" }} do |f|
        .modal-header
          %h3#popup-modal-title.modal-title
            Duplicate offer
        .modal-body
          %p
            By duplicating, you create an exact copy of the offer, which you can edit later on.
            The duplicated offer will have a draft status.
          = f.input :new_name, label: "Name your new offer.",
            input_html: { class: "form-control-lg", "data-duplicate-target": "modalNameInput"}
        .modal-footer.full-width
          .buttons-row
            = link_to  _("Go back"), backoffice_service_offers_path(service), class: "btn btn-outline-primary"
            = f.button :submit, "Duplicate offer", class: "btn btn-primary"
