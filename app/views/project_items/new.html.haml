.container
  .row
    - if @project_item.service
      = simple_form_for(@project_item) do |f|
        %p= @project_item.service.title
        = f.hidden_field :service_id
        = f.association :project, collection: @projects
        %button{ class: "btn btn-primary" }
          Order
    - else
      %p= "Service is not selected!"
