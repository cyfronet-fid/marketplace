= render "layouts/sections"

#mynav.overlay
  %a.closebtn{ "href": "javascript:void(0)", "onclick": "closeNav()" } &times;
  .overlay-content
    .mobile-links
      %ul
        - if !user_signed_in?
          %li
            = link_to user_checkin_omniauth_authorize_path, class: "btn btn-primary font-weight-bold mt-5" do
              Login to EOSC marketplace
        - else
          %li
            %a.simple-item{ href: "/projects" } My projects
          %li
            %a.simple-item{ href: "/profile" } Profile
          %li
            = link_to "Logout", destroy_user_session_path, method: :delete,
            class: "btn btn-primary font-weight-bold mt-5 logout-link"

    .bottom-links
      .container.text-right.top-row
        %ul.list-inline.mb-0
          %li.list-inline-item.ml-2
            %a{ href: Mp::Application.config.portal_base_url } Info
          %li.list-inline-item.ml-2
            = link_to "Catalogue & Marketplace", root_path,
              class: "#{"active" if local_assigns[:section] == nil}"
          %li.list-inline-item.ml-2
            %a{ href: Mp::Application.config.providers_dashboard_url } Providers Dashboard
          - if policy([:backoffice, :backoffice]).show?
            %li.list-inline-item.ml-2
              = link_to "Backoffice", backoffice_path,
                class: "#{"active" if local_assigns[:section] == :backoffice}"
          - if policy([:admin, :admin]).show?
            %li.list-inline-item.ml-2
              = link_to "Admin", admin_path, section: "admin",
                class: "#{"active" if local_assigns[:section] == :admin}"


.container.pl-0.pr-0
  %nav.navbar.navbar-expand-lg.pl-0.pr-0
    = link_to root_path, class: "navbar-brand col-7 col-lg-3 pl-0" do
      = image_tag "eosc-logo-color.png", class: "eosc-hub-logo-main"
      .logo-bg
    %span.open-menu.col-4{ "onclick": "openNav()" }
      Menu
      %i.fas.fa-bars
    .col-12.col-lg-6
      = render "services/search", categories: categories

    %button.navbar-toggler.col-2{ "aria-controls" => "main-navbar",
                           "aria-expanded" => "false",
                           "aria-label" => "Toggle navigation",
                           "data-target" => "#main-navbar",
                           "data-toggle" => "collapse",
                           type: "button" }
      %i.fas.fa-bars

    #main-navbar.collapse.navbar-collapse.col-3.pl-0.main-nav
      %ul.navbar-nav.ml-auto.pt-2.d-flex.flex-wrap.d-sm-none.d-xs.none.d-md-none.d-lg-block
        - if !user_signed_in?
          %li.nav-item.ml-1
            = link_to user_checkin_omniauth_authorize_path, class: "nav-link d-block mb-2" do
              My EOSC Marketplace
        - else
          %li.nav-item.ml-1.dropdown
            %a.nav-link.px-2.py-1.dropdown-toggle{ "data-toggle": "dropdown", "aria-expanded": "false" }
              %i.fas.fa-chevron-down.d-lg-none.mr-2
              %i.fas.fa-chevron-up.d-lg-none.mr-2
              My EOSC Marketplace
            .dropdown-menu.ml-4.ml-lg-0.shadow
              %a.dropdown-item{ href: "/projects" } My projects
              %a.dropdown-item{ href: "/profile" } Profile

