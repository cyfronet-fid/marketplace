%html
  %head
    %meta{ content: "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %link{ href: "https://fonts.googleapis.com/css?family=Ubuntu:400,700&subset=latin-ext", rel: "stylesheet" }
    :css
      body {
        font-family: Ubuntu, Verdana, sans-serif;
        background: #f8f9fa;
      }

      .wrapper {
        box-shadow: 0 20px 30px 0 rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin: 40px auto 20px;
        max-width: 600px;
        overflow: hidden;
        padding: 30px 0
      }
      .maintable {
        width: 95%;
        margin: auto;
      }
      .service-table {
        width: 70%;
        margin: auto;
      }
      .content {
        padding-top: 25px
      }

      td.footer {
        font-family: Ubuntu, Verdana, sans-serif;
        color: #233d4c;
        font-weight: normal;
      }

      .header {
        padding-bottom: 30px;
      }
      .header td {
        text-align: center;
      }
      h3 {
        font-size: 20px;
        padding: 0 15px 10px 0;
        margin: 30px 0 15px 0;
        font-weight: normal;
      }
      h5 {
        font-size: 18px;
        padding: 0;
        margin: 0;
        font-weight: normal;
      }
      p {
        font-size: 15px;
        padding: 0;
        color: #233d4c;
        line-height: 24px;
      }

      .footer {
        font-size: 14px;
        border-top: 1px solid #D2D6D8;
        padding-top: 30px;
      }

      .font-bold {
        font-weight: bold;
      }

      .center {
        text-align: center;
      }

      .button {
        display: inline-block;
        color: #fff;
        background-color: #0c2bd5;
        background-image: linear-gradient(135deg, #05cae7 0%, #0c2bd5 100%);
        font-weight: 400;
        text-align: center;
        text-decoration: none;
        vertical-align: middle;
        border: 0 solid transparent;
        padding: 0.375rem 2rem;
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 20px;
        border-radius: 2rem;
      }


  %body

    .wrapper

      %table.maintable{ cellpadding: 0, cellspacing: 0 }
        %tr.header
          %td{ valign: "middle;" }
            = image_tag("white-label-logo.png", width: 240, alt: "Your marketplace logo")
        %tr
          %td.content
            = yield
        %tr
          %td.footer{ colspan: 2 }
            Best regards,
            %br
            Operation Team
