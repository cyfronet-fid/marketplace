%html
  %head
    %meta{ content: "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %link{ href: "https://fonts.googleapis.com/css?family=Ubuntu:400,700&subset=latin-ext", rel: "stylesheet" }
    :css
      body {
        font-family: Ubuntu, Verdana, sans-serif;
        background: #f8f9fa;
      }

      .wrapper {
        box-shadow: 0 20px 30px 0 rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin: 40px auto 20px;
        max-width: 600px;
        overflow: hidden;
        padding: 30px 0
      }
      .maintable {
        width: 95%;
        margin: auto;
      }
      .content {
        padding-top: 25px
      }

      td.footer {
        font-family: Ubuntu, Verdana, sans-serif;
        color: #233d4c;
        font-weight: normal;
      }

      .header {
        padding-bottom: 30px;
      }

      h3 {
        font-size: 20px;
        padding: 0 15px 10px 0;
        margin: 30px 0 15px 0;
        font-weight: normal;
      }

      p {
        font-size: 15px;
        padding: 0;
        color: #233d4c;
        line-height: 24px;
      }

      .footer {
        font-size: 14px;
        border-top: 1px solid #D2D6D8;
        padding-top: 30px;
      }

      .font-bold {
      .font-bold {
        font-weight: bold;
      }


  %body

    .wrapper

      %table.maintable{ cellpadding: 0, cellspacing: 0 }
        %tr.header
          %td{ valign: "middle;" }
            = image_pack_tag("eosc-logo-color.png", width: 240, alt: "Logo EOSC Marketplace")
        %tr
          %td.content
            = yield
        %tr
          %td.footer{ colspan: 2 }
            Kind regards,
            %br
            EOSC Portal Marketplace Team
