= simple_form_for report, remote: true, url: reports_path do |f|
  - unless current_user
    = f.input :author, label: t("simple_form.labels.question.author")
    = f.input :email, as: :email
  = f.input :text, as: :text, input_html: { rows: 6 },
                label: t("simple_form.labels.report.text")
  #recaptcha= recaptcha_tags
  %hr.bottom-hr.mt-4.mb-4
  = f.submit "SEND", id: "report-modal-action-btn", class: "btn btn-primary pl-5 pr-5 float-left"
  %button.close.close-link{ type: "button", "data-dismiss": "modal", "aria-label": "Close" }
    %span Close
