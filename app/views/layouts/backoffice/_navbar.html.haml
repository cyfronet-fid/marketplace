= render "layouts/sections"
.container
  %nav.navbar.navbar-expand-lg.navbar-light
    = link_to root_path, class: "navbar-brand col-8 col-lg-3 pl-0 backoffice-logo" do
      = image_pack_tag "eosc-logo-color-backoffice.png"

    %button.navbar-toggler.backoffice-menu{ "aria-controls" => "navbar-supported-content",
                            "aria-expanded" => "false", "aria-label" => "Toggle navigation",
                            "data-target" => "#navbar-supported-content",
                            "data-toggle" => "collapse",
                             type: "button" }
      %span.navbar-toggler-icon

    #navbar-supported-content.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto.pt-2
        = nav_link controller: :backoffices, html_options: { class: "nav-item" } do
          = link_to _("Getting Started"), backoffice_path, class: "nav-link px-2 py-1"
        = nav_link controller: :services, html_options: { class: "nav-item" } do
          = link_to _("Owned Resources"), backoffice_services_path, class: "nav-link px-2 py-1"
        - if policy([:backoffice, ScientificDomain]).index?
          = nav_link controller: :scientific_domains, html_options: { class: "nav-item" } do
            = link_to _("Scientific domains"), backoffice_scientific_domains_path, class: "nav-link px-2 py-1"
        - if policy([:backoffice, Category]).index?
          = nav_link controller: :categories, html_options: { class: "nav-item" } do
            = link_to _("Categories"), backoffice_categories_path, class: "nav-link px-2 py-1"
        - if policy([:backoffice, Provider]).index?
          = nav_link controller: :providers, html_options: { class: "nav-item" } do
            = link_to _("Providers"), backoffice_providers_path, class: "nav-link px-2 py-1"
        - if policy([:backoffice, Platform]).index?
          = nav_link controller: :platforms, html_options: { class: "nav-item" } do
            = link_to _("Platforms"), backoffice_platforms_path, class: "nav-link px-2 py-1"
        = nav_link controller: :backoffices, html_options: { class: "nav-item" } do
          = link_to _("Logout"), destroy_user_session_path, method: :delete, class: "nav-link px-2 py-1"
