.py-3.pl-4.pr-3.rounded.service-box.service-detail.mb-4.project-heading.raid-box
  .row
    .col-md-11.d-flex.align-items-center
      .box-wrapper
        %h3.flex-grow-1.text-break
          = link_to raid_project.main_title.text, edit_raid_project_path(id: raid_project.pid)
        .details-row
          - if raid_project.end_date
            Duration: #{raid_project.start_date} -  #{raid_project.end_date}
          - unless raid_project.end_date
            Project start: #{raid_project.start_date}
