- breadcrumb :project_edit, @project
.container
  %h1.mb-5
    Edit Project
    = @project.name
  .edit-project
    = render "form", project: @project
  %hr.bottom-hr.mt-5.mb-4
  .row
    .col-12
      %button.btn.btn-primary.pl-5.pr-5{ type: "submit",
                           form: "modal-form" }
        = t("project.buttons.update")
      = back_link_to t("project.buttons.cancel"), @project,
                      class: "btn btn-link text-uppercase"
