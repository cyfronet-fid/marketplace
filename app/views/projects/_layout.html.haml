- breadcrumb :project, project
.container
  .pt-4.pl-3.pr-3.shadow-sm.rounded.service-box.service-detail
    %h1.ml-3
      = project.name
    %p
      = link_to "Edit", edit_project_path(project),
                class: "btn btn-primary btn-sm float-right"
      = link_to "Delete", project_path(project),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-danger btn-sm float-right"
      = link_to projects_url do
        %i.fa.fa-chevron-left
        back to my projects and orders
    .row
      .col-12
        %ul.nav.nav-tabs.mt-4.pl-3.row
          %li.nav-item
            = link_to "Project details", project_path(project),
              class: "nav-link #{"active" if controller.controller_name == "projects"}"
          %li.nav-item
            = link_to "Chat with customer service", project_chat_path(project),
              class: "nav-link #{"active" if controller.controller_name == "chats"}"
        .tab-content
          .container.pt-2
            = yield
