- breadcrumb :project_new
.container
  .mb-4.pb-4.border-header
    %h1.mr-auto.my-auto= t(".title")
  = render "form", project: @project, show_recaptcha: true

  %hr.bottom-hr.mt-5.mb-4
  .row
    .col-12
      %button.btn.btn-primary.pl-5.pr-5{ type: "submit",
                               form: "modal-form" }
        = t("projects.buttons.create")
      = back_link_to t("projects.buttons.cancel"), @project,
        class: "btn btn-link text-uppercase"
