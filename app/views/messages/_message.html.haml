%li.step-progress-item.current.ml-5
  .time.x-small
    = time_ago_in_words(current.created_at) + " ago"

  .ml-4
    - if current.class.name.downcase == "message"
      %p.frame= current.message
    - else
      %p.frame= t("conversations.status.info.#{current.status}")
    .d-block.message-info= label_message(current)




