- if policy(service).order? || local_assigns[:preview]
  = link_to _("Access the service"),
                  service_offers_path(service),
                  class: "btn btn-primary d-block mb-3 py-3",
                  "data-e2e": "access-service-btn",
                  "data-probe": "",
                  "data-service-id": service.id,
                  "data-preview-target": local_assigns[:preview] ? "link" : ""
  - if user_signed_in? && show_manage_button?(service)
    = render "components/presentable/header_component/service_drop_down_menu", service: service
  = render "layouts/common_parts/services/order_type_label", object: service
