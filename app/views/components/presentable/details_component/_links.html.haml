- fields.map do |field|
  - if object.send(field).present?
    - case type
    - when "array"
      - object.send(field).each_with_index do |link, idx|
        %li.links
          %i.fas.fa-arrow-right
          -# TODO: refactor dynamic translation
          = link_to(t(".#{field}", idx: idx + 1), link, "data-probe": "",
          "data-target": local_assigns[:preview] ? "preview.link" : "")
    - when "service"
      - object.send(field).map do |element|
        %li.links
          %i.fas.fa-arrow-right
          = link_to(element.name, service_path(element), "data-probe": "",
          "data-target": local_assigns[:preview] ? "preview.link" : "")
    - else
      %li.links
        %i.fas.fa-arrow-right
        -# TODO: refactor dynamic translation
        = link_to(t("services.about.sidebar.fields.#{field}"), object.send(field), "data-probe": "",
        "data-target": local_assigns[:preview] ? "preview.link" : "")
