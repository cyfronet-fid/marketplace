.col-12.col-lg-4.col-sm-6
  - if content_for(:item_bar)
    = yield :item_bar
  .card.learn-more.first
    = link_to card.url, class: "card-body" do
      %h5.card-title{ "data-toggle": "tooltip", title: (card.header.size > 20 ? card.header : nil) }
        = card.header.truncate(20)
      .card-description{ "data-toggle": "tooltip", title: (card.body.size > 140 ? card.body : nil) }
        = card.body.truncate(140)
      .card-icon
        = image_tag card.picture.variant(resize: "86x111")

