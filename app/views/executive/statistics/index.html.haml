- content_for :title, _("Executive")
%h1= _("Statistics")
.card-deck.text-center
  = render "statistic", title: _("All services"), amount: @all_services_count,
    description: _("Number of all EOSC services registered in the EOSC Marketplace")
  = render "statistic", title: _("Marketplace ordering"), amount: @orderable_count,
    description: _("Number of EOSC services with offerings using EOSC Marketplace ordering process")
  = render "statistic", title: _("No Marketplace ordering"), amount: @not_orderable_count,
    description: _("Number of EOSC services not using EOSC Marketplace ordering process")
.card-deck.mt-4.text-center
  = render "statistic", title: _("Fully open access"), amount: @fully_open_access_count,
    description: statistics_description("fully_open_access")
  = render "statistic", title: _("Open access"), amount: @open_access_count,
    description: statistics_description("open_access")
  = render "statistic", title: _("Order required"), amount: @order_required_count,
    description: statistics_description("order_required")
  = render "statistic", title: _("Other"), amount: @other_count,
    description: statistics_description("other")
#statistics.accordion
  = render "pages/card", parent: "statistics",
    name: "providers", title: _("Providers (%{count})") % { count: @providers_count } do
    %p= _("Providers in the Marketplace:")
    %ul
      - @providers.each do |provider|
        %li= provider
  = render "pages/card", parent: "statistics",
    name: "disciplines", title: _("Domains (%{count})") % { count: @disciplines_count } do
    %p= _("Scientific domains ordered services are used for:")
    %ul
      - @disciplines.each do |discipline|
        %li= discipline
  = render "pages/card", parent: "statistics",
    name: "origin", title: _("Origins (%{count})") % { count: @countries_count } do
    %p= _("Countries of users ordering services:")
    %ul
      - @countries.each do |country|
        %li= country
