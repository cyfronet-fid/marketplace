= render "layouts/order/nav", service: @service, step: 3

%h2.mb-4.font-weight-normal= t "service.#{@service.service_type}.order.configuration.title"
%p.mb-4= t "service.#{@service.service_type}.order.configuration.description"


= simple_form_for @step, url: service_configuration_path(@service), method: :put,
  html: { id: "order-form", "data-controller" => "project-item", "data-project-item-url" => projects_path } do |f|
  = render "services/configurations/voucher", project_item: @step, f: f
  = render "services/configurations/attributes", project_item: @step, form: f

  -# This a a kind of hack to send form params even when no attributes and vaucher
     is created. It should be removed after this step is shown only when needed.
  = f.hidden_field :foo, value: "bar"

= content_for :next_button do
  %button.btn.btn-primary{ form: "order-form", type: "submit" }
    Next

= content_for :back_link do
  = link_to "Back to previous step - service information",
            service_information_path(@service),
            class: "text-uppercase"
