= render "layouts/order/nav", service: @service, step: 3

%h2.mb-4.font-weight-normal Summary
%p.mb-4
  Please carefully read the summary of your order.
  %br
  You can change anything now if you need.
  After clicking the order button your request will be sent to service provider.

= render "services/summaries/technical_configuration",
         service: @service, project_item: @project_item

.additional-information.mb-4
  %h5.mb-4.mt-5.font-weight-bold.configuration-title.text-uppercase
    Additional information

  %h4 My projects
  %dl.mb-4
    %dt Project name
    %dd= @project_item.project.name

  - if @project_item.offer.voucherable
    %h4 Voucher
    %dl.mb-4
      - if @project_item.request_voucher
        %dt I don't have a voucher, and I would like to request for one
      - else
        %dt Voucher ID
        %dd= @project_item.voucher_id

  %h3 Usage
  %dl.mb-4
    %dt Customer typology
    %dd= t "simple_form.options.defaults.customer_typology.#{@project_item.project.customer_typology}"

    %dt Reason to request access to #{@service.title}
    %dd= @project_item.project.reason_for_access

    - if @project_item.project.additional_information.present?
      %dt Additional information
      %dd= @project_item.project.additional_information

    %dt Research area
    %dd= @project_item.project.research_areas.names.join(", ")


= content_for :next_button do
  = link_to t("service.normal.order.title"),
            service_summary_path(@service),
            method: :post, class: "btn btn-primary"

= content_for :back_link do
  = link_to "Back to previous step - configuration",
            service_configuration_path(@service),
            class: "text-uppercase"
