%div{ "data-controller" => "details-loader", "data-details-loader-url" => projects_path }
  %h4
    = _("My projects")
  .details-content
    -# haml-lint:disable MultilinePipe
    %p.mb-4= _("You can organize your resources in projects. " + |
               "Add this resource to a specific project or create a new one.") |
    -# haml-lint:enable MultilinePipe
    = f.input :project do
      .input-group.col
        = f.input_field :project_id, collection: projects,
          class: "form-control custom-select #{"is-invalid" unless project_item.errors[:project].empty?}",
          "data-action" => "change->details-loader#changed",
          "data-target" => "details-loader.idSource"
        .input-group-append.ml-4
          = link_to _("Add new project"), new_project_path,
            class: "btn btn-primary", remote: true

  %div{ "data-target" => "details-loader.details" }
