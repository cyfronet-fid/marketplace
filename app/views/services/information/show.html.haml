= render "layouts/order/nav", service: @service, wizard: @wizard

.col-8
  %p.mb-4= t("service.#{@offer.offer_type}.description_html", service_title: @service.title)

  .text-center
    - unless @offer.orderable? && !@service.connected_url?
      = link_to t("service.#{@offer.offer_type}.link"),  @service.connected_url.to_s.html_safe,
        class: "btn btn-primary mb-2", target: "_blank"

= content_for :next_button do
  = link_to next_title, url_for, method: :put, class: "btn btn-primary"

- if prev_visible_step_key
  = content_for :back_link do
    = link_to prev_title, url_for([@service, prev_visible_step_key]), class: "text-uppercase"
