- content_for :title, @service.name
- breadcrumb :service, @service
.container
  %h1.mb-3
    = _("Ordering configuration")
  .container
    .row.info-row
      %p
        = image_pack_tag "icon-pencil.png", class: "icon-pencil"
        -# haml-lint:disable MultilinePipe
        = _("This is the place where you can manage your resource offers. " + |
          "Please, scroll down to navigate to \"Parameters and offers\" section, " + |
          "to specify your resource offers along with their ordering parameters.") |
        %br
        = _("Please note, this site also reflects how your resource and its " + |
          "offers will be presented to the users in the EOSC Catalogue & Marketplace.") |
        -# haml-lint:enable MultilinePipe

.container{ "data-controller": "comparison" }
  .pt-4.pl-3.pr-3.shadow-sm.rounded.service-box.service-detail{ "data-shepherd-tour-target": "service-box" }
    = render "services/ordering_configurations/header", service: @service
    = render "services/tabs", service: @service
.tab-content
  = render "services/ordering_configurations/about", service: @service, offers: @offers, analytics: @analytics
  = render "services/tags", service: @service

.container.mt-4.pt-4.related-container
  = render "services/related", related_services: @related_services
