#desc.tab-pane.container.pt-2.active.desc{ "aria-labelledby" => "home-tab", role: "tabpanel" }
  .row.pt-3.justify-content-between
    %main.col-9.pr-5

      = markdown(service.description)
      = render "services/offers", offers: offers

    %sidebar.col-3
      %h5 Places and languages
      %ul.list-group
        %li.list-group-item
          %span
            = service.places
        %li.list-group-item
          %span
            = service.languages

      %h5 Dedicated for
      %ul.list-group
        - service.dedicated_for.each do |dedication|
          %li.list-group-item
            %span
              = dedication

      %h5 Support
      %ul.list-group
        %li.list-group-item
          %span
            = link_to("Webpage", service.webpage_url)
        %li.list-group-item
          %span
            = link_to("Manual", service.manual_url)
        %li.list-group-item
          %span
            = link_to("Helpdesk", service.helpdesk_url)
        %li.list-group-item
          %span
            = link_to("Tutorial", service.tutorial_url)

      %h5 Some header
      %ul.list-group
        %li.list-group-item
          %span
            = link_to("Corporate SLA", service.corporate_sla_url)
        %li.list-group-item
          %span
            = link_to("Terms of use", service.terms_of_use_url)
        %li.list-group-item
          %span
            = link_to("Access policies", service.access_policies_url)

      %h5 Service restrictions
      %ul.list-group
        %li.list-group-item
          %span
            = service.restrictions

      %h5 Service phase
      %ul.list-group
        %li.list-group-item
          %span
            = service.phase
