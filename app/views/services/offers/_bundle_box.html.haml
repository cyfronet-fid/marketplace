.col-12.d-flex.align-items-stretch.bundle.bundle-order
  .card.m-0.mb-5
    = render "services/offers/bundle_description", offer: offer
    = render "services/bundle", bundled_offers: offer.main_bundles.first.all_offers, parent: offer
    = render "services/offers/bundle_links",
       contact_email: offer.main_bundles.first.contact_email || "",
       related_training: offer.main_bundles.first.related_training_url || "",
       helpdesk_url: offer.main_bundles.first.helpdesk_url || ""

    .card-button.text-center
      %label
        = f.radio_button :offer_id, offer.iid, checked: project_item.offer == offer
        %span.btn.btn-light.border.border-secondary.font-weight-bold
          .unchecked
            = _("Select a bundle")
          .checked
            = _("Selected bundle")
          %i.fas.fa-check
