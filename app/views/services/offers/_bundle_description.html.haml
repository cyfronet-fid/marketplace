.card-body.pt-4.pb-0.pl-0.collapse-group
  %span.bundle-logo
    = presentable_logo(offer.service, "align-self-center img-fluid bundle-img", "180x90")
    - offer.bundled_connected_offers.each do |item|
      = presentable_logo(item.service, "align-self-center img-fluid bundle-img", "180x90")
  %h4.card-title= offer.main_bundles.first.name
  %p
    .card-text.mb-2{ "data-controller" => "paragraph" }
      - if offer.main_bundles.first.description.size > 200
        = markdown(offer.main_bundles.first.description.truncate(200, separator: " "))
        = link_to _("Show more"), "#", class: "show-more-#{offer.id}",
                                  data: { "target" => "paragraph.showMore",
                                          "action" => "click->paragraph#showMore",
                                          text: markdown(offer.description) }
      - else
        = markdown(offer.main_bundles.first.description)
