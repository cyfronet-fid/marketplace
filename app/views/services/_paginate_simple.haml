- if services.total_entries > 10
  %nav
    %ul.pagination
      - per_page = params[:per_page]
      %li.page-item{ class: ("active" if per_page.blank? || per_page == "10") }
        = link_to "10", params.merge(per_page: 10, page: 1).permit!, class: "page-link"
      %li.page-item{ class: ("active" if per_page == "20") }
        = link_to "20", params.merge(per_page: 20, page: 1).permit!, class: "page-link"
      - if services.total_entries > 20
        %li.page-item{ class: ("active" if per_page == "30") }
          = link_to "30", params.merge(per_page: 30, page: 1).permit!, class: "page-link"
      %li.page-item.disabled
        %a.page-link.text-dark{ "data-probe" => "" }
          = _("Items on page")
