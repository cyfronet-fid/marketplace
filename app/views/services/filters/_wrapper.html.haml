- collapsed = cookies["#{filter.field_name}-filter"] == "true"
%a{ "href": "#collapse_#{filter.field_name}", "data-toggle": "collapse",
    "id": "#{filter.field_name}-filter",
    "data-action": "click->filter#toggle",
    "data-parent": "#filters", "role": "button",
    class: ("collapsed" if collapsed) }
  .row
    .col-10
      %h6.panel-heading= filter.title
    .col-2
      .collapse-icon
        %i.fas.fa-chevron-down
        %i.fas.fa-chevron-up

.row
  .col-md-12.panel-collapse.collapse{ "id": "collapse_#{filter.field_name}",
    "data-target": "filters.filter", class: ("show" unless collapsed) }
    = yield
