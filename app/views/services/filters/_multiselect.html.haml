= render "services/filters/wrapper", filter: filter do
  .form-group.panel-body{ data: { controller: "multicheckbox" } }
    - if filter.search?
      %input.form-control{ data: { target: "multicheckbox.search", action: "input->multicheckbox#search" },
        type: "text", name: "#{filter.field_name}-filter", value: params["#{filter.field_name}-filter"] }
    %input{ data: { target: "multicheckbox.all" }, type: "hidden",
      name: "#{filter.field_name}-all", value: params["#{filter.field_name}-all"] }

    = render "services/filters/multiselect_level",
      options: filter.options, html_classes: "pl-0 pr-0",
      name: filter.field_name, values: filter.values, root: true

    %a{ data: { target: "multicheckbox.toggler", action: "click->multicheckbox#toggle" },
        href: "javascript:undefined" }
