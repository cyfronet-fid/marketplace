%a{ "id": "collapsible", "href": "#collapse_#{filter.field_name}", "data-toggle": "collapse",
              "data-parent": "#filters", "aria-controls": "collapseExample", "aria-expanded": "false",
              "role": "button", class: ("collapsed" unless filter.present?) }
  .row
    .col-10
      %h6.panel-heading= filter.title
    .col-2
      .collapse-icon
        %i.fas.fa-chevron-down
        %i.fas.fa-chevron-up
.row
  .col-md-12.panel-collapse.collapse.in{ "id": "collapse_#{filter.field_name}",
    "data-target": "filters.filter", class: "#{"show" if filter.present?}" }
    .form-group
      %select.panel-body.form-control.custom-select.form-control-sm{ name: filter.field_name }
        = options_for_select(filter.options, params[filter.field_name])
