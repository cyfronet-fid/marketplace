.panel-group{ "id": "filters", "role": "tablist", "data-controller": "filters", "aria-multiselectable": "true" }
  %h5.underline-light.mb-2.pb-2.mt-4
    .row
      .col-7.text-uppercase
        Filters
      :javascript
        function handleCollapseAll(self) {
          $(self).toggleClass('collapsed');
          $(self).hasClass('collapsed') ? $('.panel-collapse').collapse('hide') : $('.panel-collapse').collapse('show');
        }
      %a.col-5.collapseall.text-right.text-dark.collapsed{ "data-target": ".panel-collapse",
      "onclick": "handleCollapseAll(this)",
      "aria-controls": "collapsible" }

  = form_tag "", method: :get, role: "search", class: "filters", "data-target": "filters.form", "data-controller": "filter" do
    = hidden_field_tag :q, params[:q] if params[:q].present?
    = hidden_field_tag :sort, params[:sort] if params[:sort].present?
    - @filters.each do |filter|
      = render "services/filters/#{filter.type}", filter: filter
