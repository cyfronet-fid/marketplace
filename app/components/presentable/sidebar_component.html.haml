- sidebar_fields.each do |group|
  - if any_present?(@object, *group[:fields])
    %h5= t("components.presentable.sidebar_component.title.#{group[:name]}")
    = render "components/presentable/sidebar_links_component/#{group[:template]}",
                  object: @object,
                  fields: group[:fields],
                  type: group[:type] || "",
                  clazz: group[:clazz] || "",
                  nested: group[:nested] || ""
