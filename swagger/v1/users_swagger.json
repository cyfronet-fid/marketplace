{
  "openapi": "3.0.1",
  "info": {
    "title": "EOSC User API",
    "version": "v1",
    "description": "API for external clients loading user configuration"
  },
  "paths": {
    "/api/v1/users/{user_id}": {
      "parameters": [
        {
          "name": "user_id",
          "in": "path",
          "required": true,
          "description": "User unique identifier",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get user roles",
        "tags": ["Users"],
        "description": "Returns roles for a specific user",
        "security": [
          {
            "authentication_token": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "description": "Unique identifier of the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "user/user_read.json"
                }
              }
            }
          },
          "404": {
            "description": "user not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "error.json"
                }
              }
            }
          },
          "401": {
            "description": "unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "error.json"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "authentication_token": {
        "type": "apiKey",
        "name": "X-User-Token",
        "in": "header"
      }
    }
  }
}
